<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.macedos.mytasksfinalproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launch"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTasksFinalProject"
        android:name=".MyApplication">
        <activity android:name=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.details.TaskDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.form.TaskFormActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>